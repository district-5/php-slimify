{
  "name": "district5/slimify",
  "description": "Slimify is a helper library for Slim Framework 4",
  "keywords": [],
  "homepage": "https://github.com/district-5/php-slimity",
  "license": "mit",
  "authors": [
    {
      "name": "Roger Thomas",
      "email": "roger.thomas@district5.co.uk"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "district5/simple-session-store": "^1.1",
    "php-di/php-di": "^7.0",
    "monolog/monolog": ">=2.3.5",
    "slim/slim": "5.x-dev",
    "slim/php-view": "*",
    "slim/psr7": "*"
  },
  "autoload": {
    "psr-4": {
      "Slimify\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "suggest": {
    "mongodb/mongodb": "To leverage better JSON parsing functionality for mongoId method"
  },
  "autoload-dev": {
    "psr-4": { "SlimifyTests\\": "tests/" }
  }
}
